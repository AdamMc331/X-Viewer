<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wifiError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="This app cannot work without an internet connection! Please connect to one and try again"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/wifiSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifiError"
        android:layout_centerHorizontal="true"
        android:text="Open Wireless Settings" />

    <Button
        android:id="@+id/retryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifiSettings"
        android:layout_centerHorizontal="true"
        android:text="Retry" />

</RelativeLayout>